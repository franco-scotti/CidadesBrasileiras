<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CidadesBrasileiras.Presentation</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CidadesBrasileiras.Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                    Cidades Brasileiras
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Home") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Populações") ? "active" : "")"
                               asp-area="" asp-controller="Populacoes" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i> Populações
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Estados") ? "active" : "")"
                               asp-area="" asp-controller="Estados" asp-action="Index">
                                <i class="bi bi-flag-fill me-1"></i> Estados
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Capitais") ? "active" : "")"
                               asp-area="" asp-controller="Capitais" asp-action="Index">
                                <i class="bi bi-star-fill me-1"></i> Capitais
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Municipios") ? "active" : "")"
                               asp-area="" asp-controller="Municipios" asp-action="Index">
                                <i class="bi bi-people-fill me-1"></i> Municípios
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="padding-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-3 bg-light">
        <div class="container text-center">
            &copy; 2025 - CidadesBrasileiras - Projeto e Arquitetura de Software
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>