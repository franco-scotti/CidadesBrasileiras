<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CidadesBrasileiras.Presentation</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CidadesBrasileiras.Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar lateral -->
        <nav class="bg-primary text-white p-3 vh-100" style="width: 250px; position: fixed; left: 0; top: 0;">
            <h4 class="text-white mb-4">Cidades Brasileiras</h4>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @((ViewData["Title"]?.ToString() == "Cidades Brasileiras - Home") ? "active text-primary" : "")"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door-fill me-2"></i> Home
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @((ViewData["Title"]?.ToString() == "Municípios") ? "active text-primary" : "")"
                       asp-area="" asp-controller="Municipios" asp-action="Index">
                        <i class="bi bi-people-fill me-2"></i> Municípios
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @((ViewData["Title"]?.ToString() == "Estados") ? "active text-primary" : "")"
                       asp-area="" asp-controller="Estados" asp-action="Index">
                        <i class="bi bi-flag-fill me-2"></i> Estados
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @((ViewData["Title"]?.ToString() == "Capitais") ? "active text-primary" : "")"
                       asp-area="" asp-controller="Capitais" asp-action="Index">
                        <i class="bi bi-star-fill me-2"></i> Capitais
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @((ViewData["Title"]?.ToString() == "Estados Cidade Mais Populosa") ? "active text-primary" : "")"
                       asp-area="" asp-controller="MaisPopulosaNCapital" asp-action="Index">
                        <i class="bi bi-star-fill me-2"></i> Cidade Mais Populosa (Não Capital)
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Conteúdo principal -->
        <div class="container-fluid" style="margin-left: 250px; padding-top: 20px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted mt-auto py-3 bg-light text-center">
                &copy; 2025 - CidadesBrasileiras - Projeto e Arquitetura de Software
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>