@model List<CidadesBrasileiras.Core.Models.Municipio>

@{
    ViewData["Title"] = "Municípios Mais populosos que não são capitais:";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h2 class="display-4 fw-semibold">Municípios mais populosos que não são capitais:</h2>
        <p class="text-muted">Lista dos Municípios que não capitais</p>

    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Município</th>
                        <th>Estado</th>
                        <th>População</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Estado.Nome</td>
                            <td>@item.Populacao.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>
